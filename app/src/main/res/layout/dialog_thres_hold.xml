<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="430.0dip"
    android:layout_gravity="center"
    android:layout_margin="22dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/dilog_bg"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/bg_btn_round"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/threshold_icon"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/threshold_icon" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/threshold"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/set_threshold_notification"
                            android:textColor="@color/blue"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.35"
                    android:orientation="vertical"
                    android:weightSum="1.0">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:gravity="center">

                        <com.rm.rmswitch.RMSwitch
                            android:id="@+id/enableThreshold"
                            android:layout_width="54dp"
                            android:layout_height="22dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="18dp"
                            app:checked="false"
                            app:enabled="true"
                            app:forceAspectRatio="false"
                            app:switchBkgCheckedColor="@color/yellow"
                            app:switchBkgNotCheckedColor="@color/dirty_white"

                            app:switchDesign="slim"
                            app:switchToggleCheckedColor="@color/yellow"
                            app:switchToggleNotCheckedColor="@color/grey" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/set_threshold"
                        android:textColor="@color/dark_orange"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.7"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:id="@+id/subtractImageView"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.33"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:background="@drawable/bg_btn_round_plus"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/minus_icon" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.34"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="110dp"
                                android:layout_height="42dp"
                                android:background="@drawable/btn_bg_calibrate"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/thresholdValueTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="@string/fiftyfour"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="17sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addImageView"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.33"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:background="@drawable/bg_btn_round_plus"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/add_icon" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:weightSum="1.0">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.33"
                                android:gravity="center|left">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="22dp"
                                    android:fontFamily="@font/quick_regular"
                                    android:text="@string/notification_settings"
                                    android:textColor="@color/dark_orange"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.34"
                                android:gravity="center|left"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.5">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="22dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="@string/sound"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center|top">

                                    <com.rm.rmswitch.RMSwitch
                                        android:id="@+id/sound"
                                        android:layout_width="54dp"
                                        android:layout_height="22dp"
                                        app:checked="false"
                                        app:enabled="true"
                                        app:forceAspectRatio="false"
                                        app:switchBkgCheckedColor="@color/bright_red"
                                        app:switchBkgNotCheckedColor="@color/lighter_grey"
                                        app:switchDesign="slim"
                                        app:switchToggleCheckedColor="@color/bright_red"
                                        app:switchToggleNotCheckedColor="@color/lighter_grey" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.33"
                                android:gravity="center|left"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.5">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="22dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="@string/vibrate"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center|top">

                                    <com.rm.rmswitch.RMSwitch
                                        android:id="@+id/vibrate"
                                        android:layout_width="54dp"
                                        android:layout_height="22dp"
                                        android:layout_centerInParent="true"
                                        app:checked="false"
                                        app:enabled="true"
                                        app:forceAspectRatio="false"
                                        app:switchBkgCheckedColor="@color/bright_red"
                                        app:switchBkgNotCheckedColor="@color/lighter_grey"
                                        app:switchDesign="slim"
                                        app:switchToggleCheckedColor="@color/bright_red"
                                        app:switchToggleNotCheckedColor="@color/lighter_grey" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6">

                            <LinearLayout
                                android:id="@+id/cancelButton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.5"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="144dp"
                                    android:layout_height="42dp"
                                    android:background="@drawable/btn_bg_calibrate"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_light"
                                        android:text="@string/cancel"
                                        android:textColor="@color/lighter_grey"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/setButton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.5"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="144dp"
                                    android:layout_height="42dp"
                                    android:background="@drawable/btn_bg_calibrate_green"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="@string/set"
                                        android:textColor="@color/white"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>